PORT=5556

# Required: Telegram bot token from BotFather
TELEGRAM_BOT_TOKEN=

# Optional: "polling" (default, easiest local dev) or "webhook" (for deployed public URL)
TELEGRAM_MODE=polling

# Used in webhook mode
TELEGRAM_WEBHOOK_PATH=/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=
APP_BASE_URL=

# llm-service connection
LLM_SERVICE_BASE_URL=http://localhost:3002
LLM_SERVICE_HMAC_SECRET=

# optional backend context enrichment
BACKEND_BASE_URL=
BACKEND_SERVICE_KEY=
BACKEND_CONTEXT_PATH=/api/v1/agent/context

# Optional system prompt prepended before user messages
# LLM_SYSTEM_PROMPT=You are a helpful assistant.
